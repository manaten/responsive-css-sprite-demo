@charset "utf-8"

@import "sprite.styl"

sprite-responsive($sprite)
  // テキストを隠す
  white-space nowrap
  text-indent 100%
  overflow hidden
  font-size 0

  $sprite_w = $sprite[6]
  $sprite_h = $sprite[7]
  $image_w = $sprite[4]
  $image_h = $sprite[5]
  $offset_x = $sprite[0]
  $offset_y = $sprite[1]

  // 倍率指定なcss sprite
  background-image url($sprite[8])
  background-size ($sprite_w / $image_w * 100)% ($sprite_h / $image_h * 100)%
  background-position ($offset_x / ($sprite_w - $image_w) * 100)% ($offset_y / ($sprite_h - $image_h) * 100)%

  // 画像のアス比固定
  &::after
    content ''
    display block
    padding-top ($image_h / $image_w * 100)%

.button1
  // テキストを隠す
  white-space nowrap
  text-indent 100%
  overflow hidden

  margin-bottom 10px
  sprite($sprite_button1)

.button2
  margin-bottom 10px
  width 50%
  sprite-responsive($sprite_button2)

.button3
  margin-bottom 10px
  width 100%
  max-width 500px
  sprite-responsive($sprite_button3)
